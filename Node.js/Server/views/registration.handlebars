<div class="container registration">
  <form id = "contact-form" method="POST" action="/register">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="name" class="form-control" name="CoCname" placeholder="Name">
    </div>

    <div class="form-group">
      <input type="radio" name="userType" value="company"> Company<br>
      <input type="radio" name="userType" value="customer"> Client<br>
    </div>


    <div class="form-group">
      <label for="Username">Username</label>
      <input type="name" class="form-control" name="username" placeholder="Username">
    </div>

    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" name="emailaddress" aria-describedby="emailHelp" placeholder="Enter email">
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      <input type="address" class="form-control" name="PHaddress"  placeholder="Address">
    </div>

    <div class="form-group">
      <label for="contactnumber">Contact Number</label>
      <input type="contact" class="form-control" name="contactnum"  placeholder="Contact Number">
    </div>


    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" id="password" placeholder="Password">
    </div>

    <div class="form-group">
      <label for="password">Retype Password</label>
      <input type="password" class="form-control" name="repass" id="repass" placeholder="Retype Password" onkeyup="checkPass(); return false;">
      <span id="confirmMessage" class="confirmMessage"></span>
    </div>

    <button type="submit" class="btn register">Register</button>
  </form>
</div>
